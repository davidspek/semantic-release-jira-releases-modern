{
  "name": "@davidspekorg/semantic-release-jira-releases-modern",
  "version": "1.2.0",
  "packageManager": "yarn@4.1.1",
  "main": "./dist/index.js",
  "types": "./lib/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidspek/semantic-release-jira-releases-modern.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "format": "biome format --write ./lib ./test && biome lint --write --unsafe ./lib ./test",
    "lint": "biome format ./lib ./test && biome lint ./lib ./test",
    "build": "tsc -p .",
    "test": "yarn jest"
  },
  "dependencies": {
    "@semantic-release/error": "2.2.0",
    "jira.js": "4.0.2",
    "lodash": "4.17.21",
    "p-limit": "2.3.0",
    "tslib": "1.14.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "12.0.1",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.13",
    "@types/request": "2.48.12",
    "@types/semantic-release__error": "3.0.3",
    "@types/signale": "1.4.7",
    "esbuild": "0.24.0",
    "esbuild-jest": "0.5.0",
    "esbuild-register": "3.6.0",
    "jest": "29.7.0",
    "semantic-release": "24.2.0",
    "typescript": "5.7.2"
  }
}
